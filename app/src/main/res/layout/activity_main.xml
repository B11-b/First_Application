<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75">

    </androidx.constraintlayout.widget.Guideline>


    <TextView
        android:id="@+id/username_textV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="10dp"
        android:text="@string/name"
        android:textColor="#24253D"
        android:textSize="25sp"
        android:layout_margin="20dp"


        />

    <TextView
        android:id="@+id/password_textV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/pass"
        android:textColor="#24253D"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@id/username_textV"
        app:layout_constraintTop_toBottomOf="@id/username_textV"
        />

    <EditText
        android:id="@+id/username_EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/username_textV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_textV"
        android:hint="@string/username"
        android:textColorHint="#9697A4"
        android:textColor="#24253D"
        android:autofillHints="username"
        android:inputType="text">
    </EditText>
 <EditText
    android:id="@+id/password_EditText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/password_textV"
     app:layout_constraintStart_toStartOf="@id/username_textV"
     app:layout_constraintEnd_toEndOf="@id/username_EditText"
     android:hint="@string/password"
     android:textColorHint="#9697A4"
     android:textColor="#24253D"
     android:autofillHints="password"
     android:inputType="textPassword">

  </EditText>

    <Button
        android:id="@+id/login_button"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:backgroundTint="#FF7D0D"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/guidLine"
        >

    </Button>
    <Button
        android:id="@+id/back_button"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:backgroundTint="#FF2D00"
        android:text="@string/Back"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/login_button"
        app:layout_constraintEnd_toEndOf="@id/login_button"
        app:layout_constraintTop_toBottomOf="@id/login_button"
         android:layout_marginTop="30dp"

        >

    </Button>
    <TextView
        android:id="@+id/hobby_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/football_ck"
        app:layout_constraintEnd_toEndOf="@id/password_textV"
        app:layout_constraintTop_toBottomOf="@id/password_EditText"
        app:layout_constraintBottom_toTopOf="@id/football_ck"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/hobby"
        android:textSize="15sp"
        android:textColor="#24253D"
        >

    </TextView>

    <CheckBox
        android:id="@+id/football_ck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_EditText"
        app:layout_constraintStart_toStartOf="@id/password_EditText"
        android:layout_marginTop="25sp"
        android:text="@string/FootBall"
        android:textSize="15sp"
        android:textColor="#24253D"
        >

    </CheckBox>
    <CheckBox
        android:id="@+id/swimming_ck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/football_ck"
        app:layout_constraintStart_toStartOf="@id/football_ck"
        android:text="@string/Swimming"
        android:textSize="14sp"
        android:textColor="#24253D"
        >

    </CheckBox>
    <CheckBox
        android:id="@+id/handball_ck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/swimming_ck"
        app:layout_constraintStart_toStartOf="@id/swimming_ck"
        android:text="@string/HandBall"
        android:textSize="14sp"
        android:textColor="#24253D"
        >
    </CheckBox>
    <TextView
        android:id="@+id/gender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/radio_group"
        app:layout_constraintTop_toBottomOf="@id/handball_ck"
        android:layout_marginTop="10dp"
        android:text="@string/gender"
        android:textSize="15sp"
        android:textColor="#3D3E57"
        >

    </TextView>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/handball_ck"
        app:layout_constraintTop_toBottomOf="@id/handball_ck"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <RadioButton
            android:id="@+id/female_RB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Female"
            android:textSize="15sp"
            android:textColor="#24253D"
            >

        </RadioButton>
        <RadioButton
            android:id="@+id/male_RB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Male"
            android:textSize="15sp"
            android:textColor="#24253D"
            android:layout_marginStart="100dp"
            >
        </RadioButton>

    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>